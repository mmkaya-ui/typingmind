{
    "rewrites": [
        {
            "source": "/assets/(.*)",
            "destination": "/src/assets/$1"
        },
        {
            "source": "/_next/(.*)",
            "destination": "/src/_next/$1"
        },
        {
            "source": "/(.*\\..*)",
            "destination": "/src/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/src/index.html"
        }
    ],
    "functions": {
        "api/**/*.js": {
            "memory": 128,
            "maxDuration": 10
        }
    }
}